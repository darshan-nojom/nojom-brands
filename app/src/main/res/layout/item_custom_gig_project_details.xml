<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal">

        <android.textview.CustomTextView
            android:id="@+id/tv_gig_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:font_name="@string/sf_protext_regular" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="0.40"
            android:gravity="end|center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_infom"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_information"
                tools:ignore="ImageContrastCheck" />

            <android.textview.CustomTextView
                android:id="@+id/tv_custom_packages"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/white_rounded_corner_20"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                app:font_name="@string/sftext_medium" />
        </LinearLayout>

    </LinearLayout>

</layout>