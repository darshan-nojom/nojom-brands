<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/gray_rounded_corner_20"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <android.textview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/msgVerified"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/_13sdp"
            app:font_name="@string/sftext_semibold" />

        <android.edittext.CustomEditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/white_rounded_corner_10"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:hint="@string/msgEnterEmail"
            android:paddingStart="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:font_name="@string/sftext_regular"
            tools:ignore="RtlSymmetry,TextContrastCheck,TouchTargetSizeCheck" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:background="@drawable/blue_bg_20">

            <android.button.CustomButton
                android:id="@+id/btnSendEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="center"
                android:text="@string/sendVerificationEmail"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sf_protext_regular"
                tools:ignore="TouchTargetSizeCheck" />

            <fr.castorflex.android.circularprogressbar.CircularProgressBar
                android:id="@+id/progressBarEmail"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminate="true"
                android:visibility="gone"
                app:cpbStyle="@style/CircularProgressBar"
                app:cpb_color="@color/white"
                app:cpb_colors="@array/progressColor"
                app:cpb_max_sweep_angle="300"
                app:cpb_min_sweep_angle="10"
                app:cpb_rotation_speed="1.0"
                app:cpb_stroke_width="@dimen/_2sdp"
                app:cpb_sweep_speed="1.0" />
        </RelativeLayout>


    </LinearLayout>
</layout>