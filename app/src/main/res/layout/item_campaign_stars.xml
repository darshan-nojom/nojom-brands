<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/gray_border_l_8"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_invoice" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.textview.CustomTextView
                    android:id="@+id/tv_receiver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/job_id"
                    android:textColor="@color/C_020814"
                    android:textSize="@dimen/_12sdp"
                    app:font_name="@string/sf_protext_regular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.textview.CustomTextView
                        android:id="@+id/tv_budget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableStart="@drawable/icon__2_"
                        android:drawablePadding="@dimen/_3sdp"
                        android:text="@string/job_id"
                        android:textColor="@color/C_020814"
                        android:textSize="@dimen/_9sdp"
                        app:font_name="@string/sf_protext_regular" />

                    <android.textview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="@string/hr"
                        android:textColor="@color/c_3C3C4399"
                        android:textSize="@dimen/_9sdp"
                        app:font_name="@string/sf_protext_regular" />
                </LinearLayout>
            </LinearLayout>

            <android.textview.CustomTextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black_alpha_50"
                android:paddingStart="@dimen/_7sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_7sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="@string/pending"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="@dimen/_9sdp"
                app:font_name="@string/sftext_regular" />
        </LinearLayout>

        <android.textview.CustomTextView
            android:id="@+id/txt_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:textColor="@color/C_8080808C"
            android:textSize="@dimen/_10sdp"
            app:font_name="@string/sf_protext_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/C_F2F2F7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <android.textview.CustomTextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/black_bg_20"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:id="@+id/txt_chat"
                android:text="@string/chat"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                app:font_name="@string/sf_protext_medium" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.textview.CustomTextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/C_080921"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="@string/sf_protext_regular" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <android.textview.CustomTextView
                        android:id="@+id/txt_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="0%"
                        android:textColor="@color/c_3C3C43"
                        android:textSize="@dimen/_10sdp"
                        app:font_name="@string/sf_protext_regular" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@id/txt_percent"
                        android:background="@color/gray" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>