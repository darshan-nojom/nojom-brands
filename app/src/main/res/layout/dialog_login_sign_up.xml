<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/dialog_round_corner_top"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingRight="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <ImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@null"
                    android:src="@drawable/fixed_price"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_close"
                    tools:ignore="ImageContrastCheck" />
            </RelativeLayout>

            <android.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:text="@string/please_login_or_register_to_hire_view_profiles_chat_and_more"
                android:textColor="@color/black"
                android:textSize="@dimen/_19sdp"
                app:font_name="@string/sf_protext_medium"/>

            <LinearLayout
                android:id="@+id/lout_signup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/white_rounded_corner_10"
                android:baselineAligned="false"
                android:elevation="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.90"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    tools:ignore="RtlSymmetry">

                    <android.textview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_up_login"
                        android:textColor="@color/blue_dark"
                        android:textSize="@dimen/_16sdp"
                        app:font_name="@string/sf_protext_semibold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:contentDescription="@null"
                        android:elevation="@dimen/_1sdp"
                        android:padding="@dimen/_6sdp"
                        android:src="@drawable/mirror_back_arrow"
                        tools:ignore="ImageContrastCheck" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lout_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/white_rounded_corner_10"
                android:baselineAligned="false"
                android:elevation="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.90"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    tools:ignore="RtlSymmetry">

                    <android.textview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/join_as_star"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        app:font_name="@string/sf_protext_semibold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:contentDescription="@null"
                        android:elevation="@dimen/_1sdp"
                        android:padding="@dimen/_6sdp"
                        android:src="@drawable/mirror_back_arrow"
                        tools:ignore="ImageContrastCheck" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</layout>