<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">

        <android.textview.CustomTextView
            android:id="@+id/tv_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.12"
            android:background="@android:color/background_dark"
            android:textSize="@dimen/_11sdp"
            app:font_name="@string/sftext_bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <View
                android:id="@+id/ratingbar"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_15sdp"
                android:alpha="0.12"
                android:background="@android:color/background_dark"
                app:srb_starHeight="@dimen/_14sdp"
                app:srb_starPadding="1dp"
                app:srb_starWidth="@dimen/_12sdp"
                app:srb_stepSize="0.1" />

            <android.textview.CustomTextView
                android:id="@+id/tv_rating"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/ratingbar"
                android:alpha="0.12"
                android:background="@android:color/background_dark"
                android:textSize="@dimen/_9sdp"
                app:font_name="@string/sftext_medium" />

            <android.textview.CustomTextView
                android:id="@+id/tv_date"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:alpha="0.12"
                android:background="@android:color/background_dark"
                android:textColor="@color/textgrayAccent"
                android:textSize="@dimen/_9sdp"
                app:font_name="@string/sftext_medium"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <android.textview.CustomTextView
            android:id="@+id/tv_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:alpha="0.12"
            android:background="@android:color/background_dark"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/_12sdp"
            app:font_name="@string/sftext_regular" />
    </LinearLayout>
</layout>