<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_title" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp">


                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:text="@string/sender_name"
                    android:textAlignment="viewStart"
                    android:textColor="@color/C_080921"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="@string/sf_protext_medium"
                    tools:ignore="TextContrastCheck" />

                <android.edittext.CustomEditText
                    android:id="@+id/et_senderName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/gray_button_bg"
                    android:hint="@string/sender_name"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/_13sdp"
                    app:font_name="@string/sf_protext_regular"
                    tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/bank_name"
                    android:textAlignment="viewStart"
                    android:textColor="@color/C_080921"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="@string/sftext_bold"
                    tools:ignore="TextContrastCheck" />

                <android.edittext.CustomEditText
                    android:id="@+id/et_bankName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/gray_button_bg"
                    android:clickable="false"
                    android:editable="false"
                    android:hint="@string/bank_name"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/_13sdp"
                    app:font_name="@string/sf_protext_regular"
                    tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/account_number"
                    android:textAlignment="viewStart"
                    android:textColor="@color/C_080921"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="@string/sftext_bold"
                    tools:ignore="TextContrastCheck" />

                <android.edittext.CustomEditText
                    android:id="@+id/etCardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/gray_button_bg"
                    android:hint="@string/_0000_0000_0000_0000"
                    android:inputType="textNoSuggestions|phone"
                    android:maxLength="19"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/_13sdp"
                    app:font_name="@string/sf_protext_regular"
                    tools:ignore="TextContrastCheck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.textview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="@string/transaction_amount"
                            android:textAlignment="viewStart"
                            android:textColor="@color/C_080921"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="@string/sftext_bold"
                            tools:ignore="TextContrastCheck" />

                        <android.edittext.CustomEditText
                            android:id="@+id/etTxnAmount"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/gray_button_bg"
                            android:editable="false"
                            android:hint="@string/_00"
                            android:padding="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_13sdp"
                            app:font_name="@string/sf_protext_regular"
                            tools:ignore="TextContrastCheck" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.textview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="@string/transaction_date"
                            android:textAlignment="viewStart"
                            android:textColor="@color/C_080921"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="@string/sftext_bold"
                            tools:ignore="TextContrastCheck" />

                        <android.edittext.CustomEditText
                            android:id="@+id/etTxnDate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/gray_button_bg"
                            android:hint="@string/mm_dd_yyyy"
                            android:padding="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_13sdp"
                            app:font_name="@string/sf_protext_regular"
                            tools:ignore="TextContrastCheck" />
                    </LinearLayout>

                </LinearLayout>

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/reference_number"
                    android:textAlignment="viewStart"
                    android:textColor="@color/C_080921"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="@string/sftext_bold"
                    tools:ignore="TextContrastCheck" />

                <android.edittext.CustomEditText
                    android:id="@+id/etRefNo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/gray_button_bg"
                    android:hint="@string/_0000_0000_0000_0000"
                    android:inputType="textNoSuggestions|phone"
                    android:maxLength="19"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/_13sdp"
                    app:font_name="@string/sf_protext_regular"
                    tools:ignore="TextContrastCheck" />

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/note_"
                    android:textAlignment="viewStart"
                    android:textColor="@color/C_080921"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="@string/sftext_bold"
                    tools:ignore="TextContrastCheck" />

                <android.edittext.CustomEditText
                    android:id="@+id/etNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/gray_button_bg"
                    android:gravity="start"
                    android:hint="@string/write_here"
                    android:imeOptions="actionDone"
                    android:lines="3"
                    android:minLines="3"
                    android:padding="@dimen/_10sdp"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/_13sdp"
                    app:font_name="@string/sf_protext_regular"
                    tools:ignore="TextContrastCheck" />

                <android.textview.CustomTextView
                    android:id="@+id/txt_attach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:drawableStart="@drawable/add_square"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center_vertical|start"
                    android:text="@string/attach_proof_of_transfer"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_13sdp"
                    app:font_name="@string/sf_protext_medium"
                    tools:ignore="TextContrastCheck" />

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:gravity="center_vertical|start"
                    android:text="@string/supported_formats_image_or_pdf_file"
                    android:textAlignment="viewStart"
                    android:textColor="@color/c_3C3C4399"
                    android:textSize="@dimen/_12sdp"
                    app:font_name="@string/sf_protext_regular"
                    tools:ignore="TextContrastCheck" />

                <LinearLayout
                    android:id="@+id/rel_selected_crn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/gray_button_bg"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgFile"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:src="@drawable/folder" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.textview.CustomTextView
                            android:id="@+id/txt_fileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/file_not_selected"
                            android:textColor="@color/black_alpha_60"
                            android:textSize="@dimen/_12sdp"
                            app:font_name="@string/sf_protext_medium" />

                        <android.textview.CustomTextView
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/file_not_selected"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_9sdp"
                            android:visibility="gone"
                            app:font_name="@string/sf_protext_medium" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgDownload"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/eye_gray"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgDelete"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:src="@drawable/ic_trash" />


                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/rel_depositNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/lightgray_button_bg_12"
            android:backgroundTint="@color/colorPrimary"
            android:padding="@dimen/_13sdp">

            <android.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/txt_cont"
                android:text="@string/continue_"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                app:font_name="@string/sf_protext_bold" />

            <fr.castorflex.android.circularprogressbar.CircularProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminate="true"
                android:visibility="gone"
                app:cpbStyle="@style/CircularProgressBar"
                app:cpb_color="@color/white"
                app:cpb_colors="@array/progressColor"
                app:cpb_max_sweep_angle="300"
                app:cpb_min_sweep_angle="10"
                app:cpb_rotation_speed="1.0"
                app:cpb_stroke_width="@dimen/_2sdp" />

        </RelativeLayout>

    </LinearLayout>
</layout>