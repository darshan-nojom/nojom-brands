<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_deposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/white_rounded_corner_15"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <ImageView
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/large_green_tick"
            tools:ignore="ImageContrastCheck" />

        <android.textview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="@string/congratulation"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            app:font_name="@string/sftext_bold" />

        <android.textview.CustomTextView
            android:id="@+id/tv_user_release_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/user_done_with_job"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:font_name="@string/sftext_regular" />

        <android.textview.CustomTextView
            android:id="@+id/tv_hows_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/how_was_user"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:font_name="@string/sftext_regular" />

        <com.willy.ratingbar.ScaleRatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            app:srb_clearRatingEnabled="false"
            app:srb_clickable="true"
            app:srb_drawableEmpty="@drawable/star_gray_border"
            app:srb_drawableFilled="@drawable/star_gray_border"
            app:srb_numStars="5"
            app:srb_rating="0"
            app:srb_starHeight="@dimen/_30sdp"
            app:srb_starPadding="1dp"
            app:srb_starWidth="@dimen/_30sdp"
            app:srb_stepSize="0.5"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <android.textview.CustomTextView
            android:id="@+id/tv_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/skip"
            android:textAllCaps="false"
            android:textColor="@color/red_dark"
            android:textSize="@dimen/_13sdp"
            app:font_name="@string/sftext_bold" />
    </LinearLayout>
</layout>