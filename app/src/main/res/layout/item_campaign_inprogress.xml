<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/gray_border_l_8"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/image_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal" />

            <android.textview.CustomTextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/C_8080808C"
                android:textSize="@dimen/_10sdp"
                app:font_name="@string/sf_protext_regular" />
        </LinearLayout>

        <android.textview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/job_id"
            android:textColor="@color/C_020814"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"
            app:font_name="@string/sf_protext_regular" />

        <android.textview.CustomTextView
            android:id="@+id/tv_receiver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_7sdp"
            android:textColor="@color/C_020814"
            android:textSize="@dimen/_12sdp"
            app:font_name="@string/sf_protext_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <android.textview.CustomTextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/C_020814"
                android:textSize="@dimen/_20sdp"
                app:font_name="@string/sf_protext_bold" />

            <android.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="bottom"
                android:text="@string/sar"
                android:textColor="@color/c_3C3C4399"
                android:textSize="@dimen/_12sdp"
                app:font_name="@string/sf_protext_bold" />

        </LinearLayout>

        <android.textview.CustomTextView
            android:id="@+id/txt_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/C_8080808C"
            android:textSize="@dimen/_10sdp"
            app:font_name="@string/sf_protext_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/C_F2F2F7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <android.textview.CustomTextView
                android:id="@+id/txt_agents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableStart="@drawable/users_group_rounded"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@color/C_080921"
                android:textSize="@dimen/_11sdp"
                app:font_name="@string/sf_protext_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/linDate"
                android:visibility="gone"
                android:orientation="vertical">

                <android.textview.CustomTextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Due Date"
                    android:textColor="@color/C_080921"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="@string/sf_protext_regular" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <android.textview.CustomTextView
                        android:id="@+id/txt_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="0%"
                        android:textColor="@color/c_3C3C43"
                        android:textSize="@dimen/_10sdp"
                        app:font_name="@string/sf_protext_regular" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@id/txt_percent"
                        android:background="@color/gray" />

                </RelativeLayout>


            </LinearLayout>

            <android.textview.CustomTextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/pending"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:paddingTop="@dimen/_2sdp"
                android:visibility="gone"
                android:background="@drawable/blue_bg_20"
                android:paddingBottom="@dimen/_2sdp"
                app:font_name="@string/sf_protext_regular" />
        </LinearLayout>
    </LinearLayout>
</layout>