<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_scrollFlags="scroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30sdp"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp">

                <android.textview.CustomTextView
                    android:id="@+id/tv_here_blue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/i_m_here"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="invisible"
                    app:font_name="@string/sftext_bold" />

                <android.textview.CustomTextView
                    android:id="@+id/tv_here_silver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/i_m_here"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="invisible"
                    app:font_name="@string/sftext_bold" />

                <android.textview.CustomTextView
                    android:id="@+id/tv_here_gold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/i_m_here"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="invisible"
                    app:font_name="@string/sftext_bold" />

                <android.textview.CustomTextView
                    android:id="@+id/tv_here_vip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/i_m_here"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="invisible"
                    app:font_name="@string/sftext_bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:id="@+id/ll_medal_blue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/img_medal_blue"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:contentDescription="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_medal_silver"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/img_medal_silver"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:contentDescription="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_medal_gold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/img_medal_gold"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:contentDescription="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_medal_vip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/img_medal_vip"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:contentDescription="@string/app_name" />
                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_17sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar_bg" />

            <android.textview.CustomTextView
                android:id="@+id/tv_away_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                app:font_name="@string/sftext_bold" />

            <android.textview.CustomTextView
                android:id="@+id/tv_how_it_works"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_40sdp"
                android:gravity="center"
                android:text="@string/see_how_it_works"
                android:textColor="@color/gray_light"
                android:textColorLink="@color/gray_light"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sftext_regular" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:orientation="horizontal">

                <android.textview.CustomTextView
                    android:id="@+id/txt_blue_label"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_button_bg"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="@string/_1_blue"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_22sdp"
                    app:font_name="@string/sftext_bold"
                    tools:ignore="RtlSymmetry" />

                <android.textview.CustomTextView
                    android:id="@+id/txt_blue"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/lightgray_button_bg"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="@string/i_m_here"
                    android:textColor="@color/tab_gray"
                    android:textSize="@dimen/_13sdp"
                    android:visibility="gone"
                    app:font_name="@string/sftext_regular"
                    tools:ignore="RtlSymmetry" />


            </RelativeLayout>

            <android.textview.CustomTextView
                android:id="@+id/txt_bronze_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="@string/spend_20_and_get"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                app:font_name="@string/sftext_bold" />

            <android.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/txt_pt_1"
                android:text="@string/_4_points_with_every_dollar_you_spend"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sftext_regular" />

            <android.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/_400_points_for_reaching_blue_level"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sftext_regular" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_70sdp"
                android:orientation="horizontal">

                <android.textview.CustomTextView
                    android:id="@+id/txt_silver_label"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/silver_button_bg"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="@string/_2_silver"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_22sdp"
                    app:font_name="@string/sftext_bold" />

                <android.textview.CustomTextView
                    android:id="@+id/txt_silver"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/lightgray_button_bg"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="@string/i_m_here"
                    android:textAlignment="viewStart"
                    android:textColor="@color/tab_gray"
                    android:textSize="@dimen/_13sdp"
                    android:visibility="gone"
                    app:font_name="@string/sftext_regular" />

            </RelativeLayout>

            <android.textview.CustomTextView
                android:id="@+id/txt_silver_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="@string/spend_100_and_get"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                app:font_name="@string/sftext_bold" />

            <android.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_pt_2"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/_4_points_with_every_dollar_you_spend"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sftext_regular" />

            <android.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/_800_points_for_reaching_silver_level"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sftext_regular" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_70sdp"
                android:orientation="horizontal">

                <android.textview.CustomTextView
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gold_button_bg"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="@string/_3_gold"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_22sdp"
                    app:font_name="@string/sftext_bold"
                    tools:ignore="RtlSymmetry" />

                <android.textview.CustomTextView
                    android:id="@+id/txt_gold"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/lightgray_button_bg"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="@string/i_m_here"
                    android:textAlignment="viewStart"
                    android:textColor="@color/tab_gray"
                    android:textSize="@dimen/_13sdp"
                    android:visibility="gone"
                    app:font_name="@string/sftext_regular"
                    tools:ignore="RtlSymmetry" />


            </RelativeLayout>

            <android.textview.CustomTextView
                android:id="@+id/txt_gold_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="@string/spend_300_and_get"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                app:font_name="@string/sftext_bold" />

            <android.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/_4_points_with_every_dollar_you_spend"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:id="@+id/txt_pt_3"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sftext_regular" />

            <android.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/_1_600_points_for_reaching_gold_level"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sftext_regular" />

            <android.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/vip_customer_support"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sftext_regular" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_70sdp"
                android:orientation="horizontal">

                <android.textview.CustomTextView
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_button_bg"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="@string/_4_vip"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_22sdp"
                    app:font_name="@string/sftext_bold"
                    tools:ignore="RtlSymmetry" />

                <android.textview.CustomTextView
                    android:id="@+id/txt_vip"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/lightgray_button_bg"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="@string/i_m_here"
                    android:textAlignment="viewStart"
                    android:textColor="@color/tab_gray"
                    android:textSize="@dimen/_13sdp"
                    android:visibility="gone"
                    app:font_name="@string/sftext_regular"
                    tools:ignore="RtlSymmetry" />
            </RelativeLayout>

            <android.textview.CustomTextView
                android:id="@+id/txt_vip_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="@string/spend_1500_and_get"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                app:font_name="@string/sftext_bold" />

            <android.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/_4_points_with_every_dollar_you_spend"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:id="@+id/txt_pt_4"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sftext_regular" />

            <android.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/_5_000_points_for_reaching_vip_level"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sftext_regular" />

            <android.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/vip_customer_support"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sftext_regular" />

            <android.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/higher_trust_score"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sftext_regular" />

            <android.textview.CustomTextView
                android:id="@+id/tv_terms_of_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_50sdp"
                android:gravity="center"
                android:text="@string/terms_of_use_"
                android:textColor="@color/black"
                android:textColorLink="@color/black"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sftext_regular" />

        </LinearLayout>

    </ScrollView>
</layout>