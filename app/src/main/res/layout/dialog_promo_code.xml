<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/gray_rounded_corner_20"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/close"
            app:tint="@color/textgrayAccent"
            tools:ignore="RtlHardcoded,ImageContrastCheck" />

        <android.textview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"
            android:text="@string/have_a_promo_code"
            android:textColor="@color/black"
            android:textSize="@dimen/_21sdp"
            app:font_name="@string/sftext_bold" />

        <android.edittext.CustomEditText
            android:id="@+id/et_promoCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/white_rounded_corner_10"
            android:hint="@string/promo_code"
            android:imeOptions="actionDone"
            android:minWidth="@dimen/_100sdp"
            android:padding="@dimen/_10sdp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/textgrayAccent"
            android:textSize="@dimen/_14sdp"
            app:font_name="@string/sftext_regular" />

        <android.textview.CustomTextView
            android:id="@+id/tv_apply"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@drawable/black_bg_20"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:minWidth="@dimen/_100sdp"
            android:padding="@dimen/_10sdp"
            android:singleLine="true"
            android:text="@string/apply"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            app:font_name="@string/sftext_bold" />
    </LinearLayout>
</layout>