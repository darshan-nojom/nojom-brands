<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    <LinearLayout
        android:id="@+id/ll_deposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded_corner_15"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp" android:tag="layout/dialog_posting_done_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/large_green_tick"
            tools:ignore="ImageContrastCheck" />

        <android.textview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:gravity="center"
            android:text="@string/thank_you"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            app:font_name="@string/sftext_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@drawable/green_border_round"
                    android:gravity="center"
                    android:text="@string/_1"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="@string/sftext_semibold"
                    tools:ignore="TextContrastCheck" />

                <android.textview.CustomTextView
                    android:id="@+id/tv_info_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/job_post_done_1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="@string/sftext_regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp">

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@drawable/green_border_round"
                    android:gravity="center"
                    android:text="@string/_2"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="@string/sftext_semibold"
                    tools:ignore="TextContrastCheck" />

                <android.textview.CustomTextView
                    android:id="@+id/tv_info_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/job_post_done_2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="@string/sftext_regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp">

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@drawable/green_border_round"
                    android:gravity="center"
                    android:text="@string/_3"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="@string/sftext_semibold"
                    tools:ignore="TextContrastCheck" />

                <android.textview.CustomTextView
                    android:id="@+id/tv_info_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/job_post_done_3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="@string/sftext_regular" />
            </LinearLayout>
        </LinearLayout>

        <android.textview.CustomTextView
            android:id="@+id/tv_view_proposals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/blue_rounded_corner"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/view_proposals"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            app:font_name="@string/sftext_semibold" />
    </LinearLayout>
         