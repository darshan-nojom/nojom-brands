<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp" android:tag="layout/fragment_camp_detail_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <android.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/campaign_title"
                        android:textColor="@color/c_3C3C4399"
                        android:textSize="@dimen/_11sdp"
                        app:font_name="@string/sftext_regular"
                        tools:ignore="TextContrastCheck" />

                    <android.textview.CustomTextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/black_alpha_50"
                        android:paddingStart="@dimen/_7sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingEnd="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:text="@string/pending"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/_9sdp"
                        app:font_name="@string/sftext_regular" />

                </LinearLayout>

                <android.textview.CustomTextView
                    android:id="@+id/txt_campaign_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:text="@string/campaign_details"
                    android:textColor="@color/C_020814"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/C_E5E5EA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.textview.CustomTextView
                        android:id="@+id/txt_stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableStart="@drawable/users_group_rounded"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="2 Stars"
                        android:textColor="@color/C_080921"
                        android:textSize="@dimen/_11sdp"
                        app:font_name="@string/sf_protext_regular" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:gravity="end">

                        <android.textview.CustomTextView
                            android:id="@+id/txt_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="0%"
                            android:textColor="@color/c_3C3C43"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="@string/sf_protext_regular" />

                        <View
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_3sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@id/txt_percent"
                            android:background="@color/gray" />

                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/C_E5E5EA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.textview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/date"
                            android:textColor="@color/c_3C3C4399"
                            android:textSize="@dimen/_11sdp"
                            app:font_name="@string/sftext_regular"
                            tools:ignore="TextContrastCheck" />

                        <android.textview.CustomTextView
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Sunday, 23 Jan,2024 "
                            android:textAlignment="viewStart"
                            android:textColor="@color/C_020814"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/_12sdp"
                            app:font_name="@string/sftext_regular" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.textview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/time"
                            android:textColor="@color/c_3C3C4399"
                            android:textSize="@dimen/_11sdp"
                            app:font_name="@string/sftext_regular"
                            tools:ignore="TextContrastCheck" />

                        <android.textview.CustomTextView
                            android:id="@+id/txt_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="03:30"
                            android:textAlignment="viewStart"
                            android:textColor="@color/C_020814"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/_12sdp"
                            app:font_name="@string/sftext_regular" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/C_E5E5EA" />

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/details"
                    android:textColor="@color/c_3C3C4399"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <android.textview.CustomTextView
                    android:id="@+id/txt_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Sunday, 23 Jan,2024 "
                    android:textAlignment="viewStart"
                    android:textColor="@color/C_020814"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/_12sdp"
                    app:font_name="@string/sftext_regular" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/C_E5E5EA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/platform"
                        android:textColor="@color/c_3C3C4399"
                        android:textSize="@dimen/_11sdp"
                        app:font_name="@string/sftext_regular"
                        tools:ignore="TextContrastCheck" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/plus" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPlatform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/C_E5E5EA" />

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/job_id"
                    android:textColor="@color/c_3C3C4399"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <android.textview.CustomTextView
                    android:id="@+id/txt_camp_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="123456"
                    android:textAlignment="viewStart"
                    android:textColor="@color/C_020814"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/_12sdp"
                    app:font_name="@string/sftext_regular" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/C_E5E5EA" />

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/attach_file"
                    android:textColor="@color/c_3C3C4399"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/file_type_icon" />

                    <android.textview.CustomTextView
                        android:id="@+id/txt_file_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_toEndOf="@+id/imgFile"
                        android:gravity="center_vertical"
                        android:text="@string/attach_file"
                        android:textColor="@color/C_344054"
                        android:textSize="@dimen/_10sdp"
                        app:font_name="@string/sf_protext_medium"
                        tools:ignore="TextContrastCheck" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/C_E5E5EA" />

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/track_request"
                    android:textColor="@color/C_1D2939"
                    android:textSize="@dimen/_13sdp"
                    app:font_name="@string/sf_protext_medium"
                    tools:ignore="TextContrastCheck" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTracks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/timeline_item" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
         