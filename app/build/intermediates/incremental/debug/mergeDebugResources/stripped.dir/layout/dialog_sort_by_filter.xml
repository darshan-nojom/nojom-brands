<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/dialog_round_corner_top"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp" android:tag="layout/dialog_sort_by_filter_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <android.textview.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:gravity="center_vertical"
                android:text="@string/sort_by"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sf_protext_bold" />

            <android.textview.CustomTextView
                android:id="@+id/txt_done"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:gravity="center_vertical|right"
                android:text="@string/done"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sf_protext_bold"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#E9E9E9" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sort_by_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

    </LinearLayout>

         