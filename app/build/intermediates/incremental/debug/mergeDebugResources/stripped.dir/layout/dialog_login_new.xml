<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <LinearLayout
        android:id="@+id/linLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_vertical"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp" android:tag="layout/dialog_login_new_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_no_login" />

        <android.textview.CustomTextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:gravity="center"
            android:text="@string/need_login_to_see_posted_jobs"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            app:font_name="@string/sftext_semibold" />

        <android.textview.CustomTextView
            android:id="@+id/txt_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:gravity="center"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/_12sdp"
            app:font_name="@string/sftext_regular" />

        <android.textview.CustomTextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@drawable/blue_gradient"
            android:gravity="center"
            android:paddingLeft="@dimen/_30sdp"
            android:paddingRight="@dimen/_30sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="@string/sure_i_d_like_that"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            app:font_name="@string/sfdiaply_regular" />

        <android.textview.CustomTextView
            android:id="@+id/tv_not_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/not_now"
            android:textColor="@color/red"
            android:textSize="@dimen/_12sdp"
            app:font_name="@string/sftext_bold" />

    </LinearLayout>
         