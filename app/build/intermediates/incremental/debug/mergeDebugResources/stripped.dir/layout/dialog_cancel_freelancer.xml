<?xml version="1.0" encoding="utf-8"?>

                                                        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/dialog_round_corner_bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_35sdp"
        android:paddingTop="@dimen/_35sdp"
        android:paddingRight="@dimen/_35sdp"
        android:paddingBottom="@dimen/_20sdp" android:tag="layout/dialog_cancel_freelancer_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.textview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/cancel_this_freelancer"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            app:font_name="@string/sfdiaply_bold" />

        <android.textview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/if_you_want_to_edit_project_details_or_choose_another_freelancer_then_please_cancel_this_freelancer"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:font_name="@string/sftext_regular" />

        <android.textview.CustomTextView
            android:id="@+id/tv_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/cancel_freelancer_is_free"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/_11sdp"
            app:font_name="@string/sftext_regular" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/blue_rounded_corner">

            <android.textview.CustomTextView
                android:id="@+id/tv_cancel_freelancer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center"
                android:text="@string/yes_cancel_this_freelancer"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                app:font_name="@string/sfdiaply_bold" />

            <fr.castorflex.android.circularprogressbar.CircularProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminate="true"
                android:visibility="gone"
                app:cpbStyle="@style/CircularProgressBar"
                app:cpb_color="@color/white"
                app:cpb_colors="@array/progressColor"
                app:cpb_max_sweep_angle="300"
                app:cpb_min_sweep_angle="10"
                app:cpb_rotation_speed="1.0"
                app:cpb_stroke_width="@dimen/_2sdp"
                app:cpb_sweep_speed="1.0" />
        </RelativeLayout>

        <android.textview.CustomTextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/cancel_2"
            android:textAllCaps="false"
            android:textColor="@color/red_dark"
            android:textSize="@dimen/_11sdp"
            app:font_name="@string/sfdiaply_bold" />
    </LinearLayout>
         