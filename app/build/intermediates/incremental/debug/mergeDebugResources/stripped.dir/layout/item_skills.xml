<?xml version="1.0" encoding="utf-8"?>

                                                        

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/item_skills_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.textview.CustomTextView
            android:id="@+id/tv_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textAlignment="viewStart"
            android:layout_toStartOf="@+id/tv_level"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:font_name="@string/sftext_regular" />

        <android.textview.CustomTextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:background="@drawable/gray_rounded_corner"
            android:minWidth="@dimen/_120sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:font_name="@string/sftext_regular" />
    </RelativeLayout>
         