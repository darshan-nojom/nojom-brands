<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                       
                                                              

    

           

    <androidx.cardview.widget.CardView
        android:id="@+id/lout_gig"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_10sdp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/_6sdp"
        card_view:cardElevation="@dimen/_4sdp"
        card_view:cardPreventCornerOverlap="false" android:tag="layout/item_gig_placeholder_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_gig"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/textgray"
                app:riv_mutate_background="false"
                app:riv_oval="false"
                tools:ignore="ImageContrastCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.willy.ratingbar.ScaleRatingBar
                            android:id="@+id/rating_agent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            app:srb_clearRatingEnabled="false"
                            app:srb_drawableEmpty="@drawable/ic_star_lined"
                            app:srb_drawableFilled="@drawable/ic_star_fill"
                            app:srb_numStars="5"
                            app:srb_rating="0"
                            app:srb_starHeight="@dimen/_10sdp"
                            app:srb_starPadding="3dp"
                            app:srb_starWidth="@dimen/_10sdp"
                            app:srb_stepSize="0.5"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                        <android.textview.CustomTextView
                            android:id="@+id/tv_rating"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:alpha="0.12"
                            android:background="@android:color/background_dark"
                            android:textSize="@dimen/_9sdp"
                            app:font_name="@string/sftext_regular" />
                    </LinearLayout>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_favourite"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_fav"
                        tools:ignore="ImageContrastCheck" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight="0.60">

                    <android.textview.CustomTextView
                        android:id="@+id/tv_description"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:alpha="0.12"
                        android:background="@android:color/background_dark"
                        android:maxLines="2"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="@string/sfdiaply_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.20">

                    <android.textview.CustomTextView
                        android:id="@+id/tv_amount"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:alpha="0.12"
                        android:background="@android:color/background_dark"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="@string/sfdiaply_bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
         