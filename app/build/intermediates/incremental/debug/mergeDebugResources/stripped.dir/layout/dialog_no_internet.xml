<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/white_rounded_corner_10"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp" android:tag="layout/dialog_no_internet_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@drawable/ic_no_internet" />

        <android.textview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/no_internet_connection"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            app:font_name="@string/sf_protext_medium" />

        <android.textview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:gravity="center"
            android:text="@string/please_check_internet_connection_on_your_smartphone_to_use_the_application"
            android:textColor="@color/black_53"
            android:textSize="@dimen/_14sdp"
            app:font_name="@string/sf_protext_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <android.button.CustomButton
                android:id="@+id/btn_retry"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_weight="1"
                android:background="@drawable/gray_button_bg"
                android:text="@string/retry"
                android:textAllCaps="false"
                android:textColor="@color/black_alpha_60"
                android:textSize="@dimen/_12sdp"
                app:font_name="@string/sf_protext_regular" />

            <android.button.CustomButton
                android:id="@+id/btn_settings"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_weight="1"
                android:background="@drawable/blue_button_bg"
                android:text="@string/go_to_settings"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                app:font_name="@string/sf_protext_regular" />
        </LinearLayout>

    </LinearLayout>

         