<?xml version="1.0" encoding="utf-8"?>

                                                        

    <LinearLayout
        android:id="@+id/lout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal" android:tag="layout/item_partners_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_profile"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"
            app:riv_corner_radius="@dimen/_8sdp"
            app:riv_oval="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical">

            <android.textview.CustomTextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/_title"
                android:textColor="@color/C_080921"
                android:textSize="@dimen/_13sdp"
                app:font_name="@string/sf_protext_medium" />

            <android.textview.CustomTextView
                android:id="@+id/txt_followerCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/gray_button_bg"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:text="@string/download_app"
                android:textColor="@color/C_080921"
                android:textSize="@dimen/_13sdp"
                app:font_name="@string/sf_protext_medium" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relCode"
                android:layout_marginTop="@dimen/_10sdp">

                <android.textview.CustomTextView
                    android:id="@+id/txt_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/_title"
                    android:textColor="@color/C_080921"
                    android:textSize="@dimen/_13sdp"
                    app:font_name="@string/sf_protext_medium" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_arrow"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/txt_code"
                    android:rotation="270"
                    android:src="@drawable/copy"
                    android:tint="@color/black" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
         