<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background" android:tag="layout/activity_my_orders_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.textview.CustomTextView
                android:id="@+id/tv_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/orders"
                android:textColor="@color/black"
                android:textSize="@dimen/_25sdp"
                app:font_name="@string/sf_protext_bold" />

            <android.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/current_orders"
                android:textColor="@color/c_3C3C4399"
                android:textSize="@dimen/_14sdp"
                android:visibility="gone"
                app:font_name="@string/sf_protext_medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.nojom.client.util.SwipeRefreshLayoutWithEmpty
                    android:id="@+id/swipeRefreshLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_15sdp">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvCurrentOrders"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            />

                        <!--            <android.textview.CustomTextView-->
                        <!--                android:layout_width="wrap_content"-->
                        <!--                android:layout_height="wrap_content"-->
                        <!--                android:layout_marginTop="@dimen/_10sdp"-->
                        <!--                android:gravity="center"-->
                        <!--                android:text="@string/past_orders"-->
                        <!--                android:textColor="@color/c_3C3C4399"-->
                        <!--                android:textSize="@dimen/_14sdp"-->
                        <!--                app:font_name="@string/sf_protext_medium" />-->

                        <!--            <androidx.recyclerview.widget.RecyclerView-->
                        <!--                android:id="@+id/rvPastOrders"-->
                        <!--                android:layout_width="match_parent"-->
                        <!--                android:layout_height="wrap_content"-->
                        <!--                android:layout_marginTop="@dimen/_5sdp"-->
                        <!--                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />-->

                        <RelativeLayout
                            android:id="@+id/lin_placeholder_login"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="gone">


                            <android.textview.CustomTextView
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="@dimen/_40sdp"
                                android:layout_marginRight="@dimen/_40sdp"
                                android:gravity="center"
                                android:text="@string/no_jobs"
                                android:textColor="@color/black_alpha_60"
                                android:textSize="@dimen/_16sdp"
                                app:font_name="@string/sfdiaply_regular" />

                            <android.textview.CustomTextView
                                android:id="@+id/txtLbl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_title"
                                android:layout_marginLeft="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_40sdp"
                                android:gravity="center"
                                android:text="@string/not_logged_on_yet_login_now_to_see_posted_jobs"
                                android:textColor="@color/black_alpha_60"
                                android:textSize="@dimen/_12sdp"
                                app:font_name="@string/sfdiaply_regular"
                                tools:ignore="RelativeOverlap" />

                            <android.textview.CustomTextView
                                android:id="@+id/btn_login"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@+id/txtLbl"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_40sdp"
                                android:background="@drawable/blue_gradient"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_30sdp"
                                android:paddingRight="@dimen/_30sdp"
                                android:paddingBottom="@dimen/_3sdp"
                                android:text="@string/sure_i_d_like_that"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                app:font_name="@string/sfdiaply_regular" />
                        </RelativeLayout>
                    </LinearLayout>
                </com.nojom.client.util.SwipeRefreshLayoutWithEmpty>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:orientation="vertical" android:tag="binding_1">

                        <include layout="@layout/item_orders_ph" />

                        <include layout="@layout/item_orders_ph" />

                        <include layout="@layout/item_orders_ph" />

                        <include layout="@layout/item_orders_ph" />

                        <include layout="@layout/item_orders_ph" />

                        <include layout="@layout/item_orders_ph" />

                        <include layout="@layout/item_orders_ph" />

                        <include layout="@layout/item_orders_ph" />

                        <include layout="@layout/item_orders_ph" />

                        <include layout="@layout/item_orders_ph" />

                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

         