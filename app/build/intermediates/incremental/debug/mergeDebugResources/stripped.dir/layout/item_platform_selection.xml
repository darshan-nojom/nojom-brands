<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal" android:tag="layout/item_platform_selection_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/rl_platform_bg"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_gravity="center"
            android:background="@drawable/yellow_bg_20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_platform"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4sdp"
                android:contentDescription="@string/facebook" />

            <android.textview.CustomTextView
                android:id="@+id/txt_gig_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/instagram"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                app:font_name="@string/sftext_regular" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_weight="0.2"
                android:contentDescription="@string/facebook"
                android:src="@drawable/ic_chevron_down"
                android:visibility="gone"
                app:tint="@color/black" />

        </LinearLayout>

        <android.textview.CustomTextView
            android:id="@+id/txt_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="start|center"
            android:includeFontPadding="false"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            app:font_name="@string/sf_protext_medium" />

        <RadioButton
            android:id="@+id/img_social_infom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/checkbox_layout"
            android:contentDescription="@string/app_name" />

    </LinearLayout>

         