<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                        

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".ui.clientprofile.ServicesActivity" android:tag="layout/activity_services_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:tag="binding_1">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_o" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:focusable="false"
                android:padding="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_15sdp">

                <android.textview.CustomTextView
                    android:id="@+id/btn_pricing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:backgroundTint="@color/lightgreen"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/pricing"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    app:font_name="@string/sftext_bold"
                    tools:ignore="TextContrastCheck"
                    tools:targetApi="lollipop" />

                <android.textview.CustomTextView
                    android:id="@+id/btn_free_trial"
                    app:font_name="@string/sftext_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/post_job"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    tools:targetApi="lollipop" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
         