<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:orientation="vertical" android:tag="layout/item_expert_list_placeholder_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:id="@+id/rl_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@color/placeholder_bg"
                tools:ignore="ImageContrastCheck" />

            <LinearLayout
                android:id="@+id/ll_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toStartOf="@+id/tv_hire"
                android:layout_toEndOf="@+id/img_user"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.textview.CustomTextView
                        android:id="@+id/tv_name"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:alpha="0.12"
                        android:background="@android:color/background_dark"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="@string/sfdiaply_bold" />

                    <View
                        android:id="@+id/img_verify"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@drawable/red_circle_round_placeholder" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp">

                    <View
                        android:id="@+id/ratingbar"
                        android:layout_width="100dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:alpha="0.1"
                        android:background="@android:color/background_dark" />

                    <View
                        android:id="@+id/tv_rating"
                        android:layout_width="70dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:alpha="0.1"
                        android:background="@android:color/background_dark"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_9sdp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/tv_hire"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:alpha="0.1"
                android:background="@android:color/background_dark"
                android:gravity="center"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

        </RelativeLayout>
    </LinearLayout>
         