<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/dialog_round_corner_top"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp" android:tag="layout/dialog_security_code_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <android.textview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/enter_security_code"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            app:font_name="@string/sftext_bold" />

        <android.textview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_14sdp"
            android:gravity="center"
            android:text="@string/security_code_note"
            android:textSize="@dimen/_11sdp"
            app:font_name="@string/sftext_regular" />

        <android.edittext.CustomEditText
            android:id="@+id/et_security_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:hint="@string/security_code"
            android:imeOptions="actionNext"
            android:padding="@dimen/_10sdp"
            android:singleLine="true"
            android:textColor="@color/black"
            app:font_name="@string/sftext_regular" />

        <android.edittext.CustomEditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:padding="@dimen/_10sdp"
            android:singleLine="true"
            android:textColor="@color/black"
            app:font_name="@string/sftext_regular" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <android.textview.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/haven_t_received_a_code"
                android:textSize="@dimen/_8sdp"
                app:font_name="@string/sftext_regular" />

            <android.textview.CustomTextView
                android:id="@+id/tv_resend_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="@string/resend_code"
                android:textColor="@color/red_dim"
                android:textSize="@dimen/_8sdp"
                app:font_name="@string/sftext_regular"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <android.button.CustomButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/cancel_button_red"
                android:backgroundTint="@color/green_aplha"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/lightgreen"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sftext_regular"
                tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

            <android.button.CustomButton
                android:id="@+id/btn_reset"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:background="@drawable/reset_pw_button_bg"
                android:backgroundTint="@color/lightgreen"
                android:text="@string/reset_password"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                app:font_name="@string/sftext_regular"
                tools:ignore="TextContrastCheck,TouchTargetSizeCheck"
                tools:targetApi="lollipop" />
        </LinearLayout>
    </LinearLayout>
         