<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".bird.ui.auth.UpdatePasswordActivity" android:tag="layout/activity_update_password_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" android:tag="binding_1">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/current_password"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:font_name="@string/sftext_bold" />

                <android.edittext.CustomEditText
                    android:id="@+id/et_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/gray_button_bg"
                    android:hint="@string/enter_your_old_password"
                    android:imeOptions="actionNext"
                    android:textAlignment="viewStart"
                    android:inputType="textPassword"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textSize="@dimen/_14sdp"
                    app:font_name="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:text="@string/new_password"
                    android:textColor="@color/black"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/_12sdp"
                    app:font_name="@string/sftext_bold" />

                <android.edittext.CustomEditText
                    android:id="@+id/et_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/gray_button_bg"
                    android:hint="@string/enter_your_new_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textSize="@dimen/_14sdp"
                    app:font_name="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <android.edittext.CustomEditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textAlignment="viewStart"
                    android:background="@drawable/gray_button_bg"
                    android:hint="@string/enter_confirm_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textSize="@dimen/_14sdp"
                    app:font_name="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/blue_rounded_corner">

                    <android.textview.CustomTextView
                        android:id="@+id/tv_save"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:gravity="center"
                        android:text="@string/save"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"
                        app:font_name="@string/sftext_bold" />

                    <fr.castorflex.android.circularprogressbar.CircularProgressBar
                        android:id="@+id/progress_bar_signup"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:indeterminate="true"
                        android:visibility="gone"
                        app:cpbStyle="@style/CircularProgressBar"
                        app:cpb_color="@color/white"
                        app:cpb_colors="@array/progressColor"
                        app:cpb_max_sweep_angle="300"
                        app:cpb_min_sweep_angle="10"
                        app:cpb_rotation_speed="1.0"
                        app:cpb_stroke_width="@dimen/_2sdp"
                        app:cpb_sweep_speed="1.0" />
                </RelativeLayout>

                <android.textview.CustomTextView
                    android:id="@+id/txt_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/forget_password"
                    android:textColor="@color/textgrayAccent"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/password_strength"
                    android:textColor="@color/black"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="@string/sftext_regular" />

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/password_info"
                    android:textColor="@color/textgrayAccent"
                    android:textSize="@dimen/_11sdp"
                    android:textAlignment="viewStart"
                    app:font_name="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <RelativeLayout
                    android:id="@+id/rl_support_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/white_rounded_corner_10"
                    android:elevation="@dimen/_5sdp"
                    android:padding="@dimen/_10sdp"
                    tools:targetApi="lollipop">

                    <android.textview.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/need_help_chat_with_support"
                        android:textColor="@color/textgrayAccent"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="viewStart"
                        app:font_name="@string/sftext_regular"
                        tools:ignore="TextContrastCheck" />

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/back"
                        android:src="@drawable/mirror_back_arrow" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
         