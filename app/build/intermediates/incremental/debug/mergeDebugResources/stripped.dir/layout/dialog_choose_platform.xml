<?xml version="1.0" encoding="utf-8"?>

                                                        

    <LinearLayout
        android:id="@+id/ll_deposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/white_rounded_corner_15"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp" android:tag="layout/dialog_choose_platform_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.textview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_a_platform"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            app:font_name="@string/sftext_bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_platform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </LinearLayout>
         