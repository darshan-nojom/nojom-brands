                <include layout="@layout/item_income_balane_placeholder" />

                <include layout="@layout/item_income_balane_placeholder" />

                <include layout="@layout/item_income_balane_placeholder" />

                <include layout="@layout/item_income_balane_placeholder" />

                <include layout="@layout/item_income_balane_placeholder" />

                <include layout="@layout/item_income_balane_placeholder" />

                <include layout="@layout/item_income_balane_placeholder" />

                <include layout="@layout/item_income_balane_placeholder" />

                <include layout="@layout/item_income_balane_placeholder" />

            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

    </RelativeLayout>
         