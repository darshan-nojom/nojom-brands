<?xml version="1.0" encoding="utf-8"?>

                                                        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingRight="@dimen/_15sdp" android:tag="layout/fragment_select_service_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.textview.CustomTextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_a_platform"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            app:font_name="@string/sf_protext_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:orientation="horizontal">

            <android.textview.CustomTextView
                android:id="@+id/txt_learn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/learn_more_amp_example"
                android:textAlignment="viewStart"
                android:textColor="@color/textgrayAccent"
                android:textSize="@dimen/_10sdp"
                app:font_name="@string/sf_protext_regular" />

            <ImageView
                android:id="@+id/img_learn_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:layout_marginStart="@dimen/_5sdp"
                android:rotation="180"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24" />

        </LinearLayout>

        <android.textview.CustomTextView
            android:id="@+id/txt_learn_more_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:includeFontPadding="false"
            android:text="@string/choose_category_caption"
            android:textAlignment="viewStart"
            android:textColor="@color/c_3C4043"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"
            app:font_name="@string/sf_protext_regular" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp" />
    </LinearLayout>
         