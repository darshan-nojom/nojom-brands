<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" android:tag="layout/dialog_refund_user_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/dialog_round_corner_bottom"
            android:orientation="vertical"
            android:paddingStart="@dimen/_25sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_10sdp">

            <android.textview.CustomTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/what_s_wrong_with_this_post"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                app:font_name="@string/sfdiaply_bold" />

            <android.textview.CustomTextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/help_us_understand_why_you_are_reporting_this_post"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/_11sdp"
                app:font_name="@string/sftext_regular" />

            <android.textview.CustomTextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:lineSpacingExtra="@dimen/_5sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/don_t_worry_your_identity_is_safe_with_us"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sdp"
                app:font_name="@string/sftext_regular" />


            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <RadioButton
                    android:id="@+id/rb_inappropriate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_checkbox"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/inappropriate_content"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/_10sdp" />

                <RadioButton
                    android:id="@+id/rb_irrelevant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_checkbox"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/irrelevant_job_post"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/_10sdp" />

                <RadioButton
                    android:id="@+id/rb_scam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_checkbox"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/look_like_a_scam"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/_10sdp" />

                <RadioButton
                    android:id="@+id/rb_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_checkbox"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/other"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/_10sdp"
                    tools:ignore="TouchTargetSizeCheck" />

            </RadioGroup>

            <android.edittext.CustomEditText
                android:id="@+id/edit_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/gray_button_bg"
                android:gravity="start"
                android:hint="@string/write_your_reason"
                android:lines="4"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone"
                app:font_name="@string/sftext_regular"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layoutDirection="ltr"
                android:orientation="horizontal">

                <android.textview.CustomTextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_button_bg"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    app:font_name="@string/sftext_regular" />

                <android.textview.CustomTextView
                    android:id="@+id/tv_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_button_bg"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    app:font_name="@string/sftext_regular" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
         