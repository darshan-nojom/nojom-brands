                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        tools:ignore="RelativeOverlap">

                        <android.edittext.CustomEditText
                            android:id="@+id/et_redeem_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/left_corner_round_white"
                            android:gravity="center"
                            android:hint="0.00"
                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            app:font_name="@string/sfdiaply_bold"
                            tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck,TextContrastCheck" />

                        <android.textview.CustomTextView
                            android:id="@+id/tv_apply_redeem"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/right_corner_round_orange"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:text="@string/redeem"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            app:font_name="@string/sfdiaply_regular"
                            tools:ignore="TextContrastCheck" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlAvailableBalance"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:visibility="gone">

                    <android.textview.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="@string/add_new_card"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:text="@string/available_balance"
                        android:textColor="@color/textgrayAccent"
                        android:textSize="@dimen/_14sdp"
                        app:font_name="@string/sftext_regular" />

                    <android.textview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical|end"
                        android:hint="@string/add_new_card"
                        android:imeOptions="actionNext"
                        android:paddingEnd="@dimen/_10sdp"
                        android:singleLine="true"
                        android:text="@string/dollar__0_00"
                        android:textColor="@color/textgrayAccent"
                        android:textSize="@dimen/_14sdp"
                        app:font_name="@string/sftext_regular"
                        tools:ignore="RelativeOverlap,RtlSymmetry" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlAddCard"
