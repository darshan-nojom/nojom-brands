                            android:textSize="@dimen/_11sdp"
                            app:font_name="@string/sftext_regular"
                            tools:ignore="RelativeOverlap" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_redeem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
