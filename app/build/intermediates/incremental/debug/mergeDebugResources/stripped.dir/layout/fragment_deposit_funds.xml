                        android:text="@string/reference_number"
                        android:textAlignment="viewStart"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_10sdp"
                        app:font_name="@string/sftext_bold"
                        tools:ignore="TextContrastCheck" />

                    <android.edittext.CustomEditText
                        android:id="@+id/etRefNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/gray_button_bg"
                        android:hint="@string/_0000_0000_0000_0000"
                        android:inputType="textNoSuggestions|phone"
                        android:maxLength="19"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/_13sdp"
                        app:font_name="@string/sftext_regular"
                        tools:ignore="TextContrastCheck" />

                    <android.textview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="@string/note_"
                        android:textAlignment="viewStart"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_10sdp"
                        app:font_name="@string/sftext_bold"
                        tools:ignore="TextContrastCheck" />

                    <android.edittext.CustomEditText
                        android:id="@+id/etNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/gray_button_bg"
                        android:gravity="start"
                        android:hint="@string/write_here"
                        android:imeOptions="actionDone"
                        android:lines="3"
                        android:minLines="3"
                        android:padding="@dimen/_10sdp"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/_13sdp"
                        app:font_name="@string/sftext_regular"
                        tools:ignore="TextContrastCheck" />

                    <android.textview.CustomTextView
                        android:id="@+id/txt_attach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:drawableStart="@drawable/add_square"
                        android:drawablePadding="@dimen/_10sdp"
                        android:gravity="center_vertical|start"
                        android:text="@string/add_attachment"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="@string/sf_protext_regular"
                        tools:ignore="TextContrastCheck" />

                    <LinearLayout
                        android:id="@+id/rel_selected_crn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/gray_button_bg"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp"
                        android:visibility="gone">

