                            app:font_name="@string/sftext_regular"
                            tools:ignore="RelativeOverlap" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            tools:ignore="RelativeOverlap">

                            <android.textview.CustomTextView
                                android:id="@+id/tv_edit_promo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_2sdp"
                                android:text="@string/remove"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_9sdp"
                                app:font_name="@string/sftext_regular" />

                            <android.textview.CustomTextView
                                android:id="@+id/tv_promoAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dollar_0_00"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp"
                                app:font_name="@string/sftext_medium" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_15sdp">

                        <android.textview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/total"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20sdp"
                            app:font_name="@string/sftext_bold"
                            tools:ignore="RelativeOverlap" />

                        <android.textview.CustomTextView
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:text="@string/dollar_0_00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_24sdp"
                            app:font_name="@string/sftext_bold"
                            tools:ignore="RelativeOverlap" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <!--        //TODO: uncomment this when update feature-->
            <android.textview.CustomTextView
                android:id="@+id/tv_promocode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="@string/promo_code"
                android:textColor="@color/textgrayAccent"
                android:textSize="@dimen/_12sdp"
                app:font_name="@string/sftext_regular"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
