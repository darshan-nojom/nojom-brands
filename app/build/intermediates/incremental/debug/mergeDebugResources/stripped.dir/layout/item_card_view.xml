<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <RelativeLayout
        android:id="@+id/rel_visa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/lightgray_border_12"
        android:padding="@dimen/_10sdp" android:tag="layout/item_card_view_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgVisa"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/visa" />

        <android.textview.CustomTextView
            android:id="@+id/txt_visa_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_toEndOf="@+id/imgVisa"
            android:text="XXXX - 2323"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            app:font_name="@string/sf_protext_regular" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgVisaCheck"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/circle_uncheck" />
    </RelativeLayout>

         