<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical" android:tag="layout/activity_add_paypal_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/back"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/intercom_back"
                app:tint="@color/black" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_paypal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp"
                    app:font_name="@string/sfdiaply_bold" />

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:text="@string/enter_your_paypal_account_email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="@string/sftext_bold" />

                <android.edittext.CustomEditText
                    android:id="@+id/et_paypal_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/white_rounded_corner_10"
                    android:hint="@string/name_example_com"
                    android:imeOptions="actionDone"
                    android:padding="@dimen/_20sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    app:font_name="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <android.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_70sdp"
                    android:text="@string/we_ll_send_an_email_verification_email"
                    android:textColor="@color/textgrayAccent"
                    app:font_name="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <android.button.CustomButton
                    android:id="@+id/btn_add_paypal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/blue_button_bg"
                    android:text="@string/add_paypal_account"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    app:font_name="@string/sftext_semibold"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
         