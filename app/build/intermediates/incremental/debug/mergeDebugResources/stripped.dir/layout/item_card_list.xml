<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    <RelativeLayout
        android:id="@+id/rlCardItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/gray_button_bg"
        android:orientation="vertical" android:tag="layout/item_card_list_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.radiobox.CustomRadioButton
            android:id="@+id/rbSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdp"
            app:font_name="@string/sftext_regular"
            tools:ignore="TouchTargetSizeCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toStartOf="@+id/tvNext"
            android:layout_toEndOf="@+id/rbSelection"
            android:orientation="vertical">

            <android.textview.CustomTextView
                android:id="@+id/tvCardNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="@dimen/_11sdp"
                app:font_name="@string/sftext_regular" />

            <android.textview.CustomTextView
                android:id="@+id/tvExpiry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:singleLine="true"
                android:textColor="@color/silver"
                android:textSize="@dimen/_10sdp"
                app:font_name="@string/sftext_regular" />

        </LinearLayout>

        <ImageView
            android:id="@+id/tvNext"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/mirror_back_arrow"
            app:tint="@color/black" />

    </RelativeLayout>
         