<?xml version="1.0" encoding="utf-8"?>

                                                        

    <LinearLayout
        android:id="@+id/lout_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_40sdp"
        android:orientation="horizontal" android:tag="layout/item_social_inf_serv_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_profile"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_13sdp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"
            android:tint="@color/c_3C4043"
            app:riv_oval="true" />

        <android.textview.CustomTextView
            android:id="@+id/txt_followerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/c_3C4043"
            android:textSize="@dimen/_9sdp"
            app:font_name="@string/sf_protext_regular" />

    </LinearLayout>
         